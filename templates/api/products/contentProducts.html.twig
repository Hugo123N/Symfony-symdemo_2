<div class="cont span_2_of_3">
	<h2 class="head">Products</h2>
	<div class="mens-toolbar">
		<div class="sort">
			<div class="sort-by">
				<label>Sort By</label>
				<select>
					<option value="">
						Position </option>
					<option value="">
						Name </option>
					<option value="">
						Price </option>
				</select>
				<a href=""><img src="{{ asset('assetsAPI/images/arrow2.gif') }}" alt="" class="v-middle"></a>
			</div>
		</div>
		<div class="pager">
			<div class="limiter visible-desktop">
				<label>Show</label>
				<select>
					<option value="" selected="selected">
						9 </option>
					<option value="">
						15 </option>
					<option value="">
						30 </option>
				</select> per page
			</div>
			<ul class="dc_pagination dc_paginationA dc_paginationA06">
				<li><a href="#" class="previous">Pages</a></li>
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
			</ul>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
	</div>
	<div class="top-box">
		{% for products in allProducts %}
		{% set product_upload_image_folder = base_upload_folder ~ '/' ~ base_product_folder ~ '/' ~ base_images_folder %}
		<div class="col_1_of_3 span_1_of_3">
			<a href="{{ path('api/detailProduct', {id: products.id}) }}">
				<div class="inner_content clearfix">
					<div class="product_image">
						<img src="{{ asset(product_upload_image_folder ~ '/' ~ products.images) }}" alt="" />
					</div>
					{% if products.priority == 1 %}
					<div class="sale-box"><span class="on_sale title_shop">Sale</span></div>
					{% endif %}
					<div class="price">
						<div class="cart-left">
							<p class="title">{{ products.name }}</p>
							<div class="price1">
								<span class="actual">{{ products.price }}</span>
							</div>
						</div>
						<div class="cart-right"> </div>
						<div class="clear"></div>
					</div>
				</div>
			</a>
		</div>
		{% endfor %}
		<div class="clear"></div>
	</div>
</div>