{% extends "api/base.html.twig" %}
{% block title %} {{ "Home"|trans }} {% endblock %}

{% block main_content %}
{# đường dẫn URL #}
<a href="{{ path('test_mail', {name : 'marry'}) }}">Send a test mail</a>

{% for message in app.flashes('notice') %}
<div id="flash-notice" class="flash-notice">
    {{ message }}
</div>
{% endfor %}
<!-- start slider -->
<div id="fwslider">
	<div class="slider_container">
		<div class="slide">
			<!-- Slide image -->
			<img src="{{ asset('assetsAPI/images/banner.jpg') }}" alt="" />
			<!-- /Slide image -->
			<!-- Texts container -->
			<div class="slide_content">
				<div class="slide_content_wrap">
					<!-- Text title -->
					<h4 class="title">{{ "Aluminium Club"|trans }}</h4>
					<!-- /Text title -->

					<!-- Text description -->
					<p class="description">{{ "Experiance"|trans }}</p>
					<!-- /Text description -->
				</div>
			</div>
			<!-- /Texts container -->
		</div>
		<!-- /Duplicate to create more slides -->
		<div class="slide">
			<img src="{{ asset('assetsAPI/images/banner1.jpg') }}" alt="" />
			<div class="slide_content">
				<div class="slide_content_wrap">
					<h4 class="title">{{ "consectetuer adipiscing"|trans }} </h4>
					<p class="description">{{ "diam nonummy nibh euismod"|trans }}</p>
				</div>
			</div>
		</div>
		<!--/slide -->
	</div>
	<div class="timers"></div>
	<div class="slidePrev"><span></span></div>
	<div class="slideNext"><span></span></div>
</div>
<!--/slider -->
<div class="main">
	<div class="wrap">
		<div class="section group">
			<div class="cont span_2_of_3">
				<h2 class="head">{{ "Featured Products"|trans }}</h2>
				<div class="top-box">

					<!-- ##333 -->
					{% for products in allProducts %}
					{% set product_upload_image_folder = base_upload_folder ~ '/' ~ base_product_folder ~ '/' ~ base_images_folder %}
					<div class="col_1_of_3 span_1_of_3">
						<a href="{{ path('api/detailProduct', {id: products.id}) }}">
							<div class="inner_content clearfix">
								<div class="product_image">
									<img src="{{ asset(product_upload_image_folder ~ '/' ~ products.images) }}"
										alt="" />
								</div>
								<div class="sale-box"><span class="on_sale title_shop">{{ "New"|trans }}</span></div>
								<div class="price">
									<div class="cart-left">
										<p class="title">{{ products.name }}</p>
										<div class="price1">
											<span class="actual">{{ products.price }}</span>
										</div>
									</div>
									<div class="cart-right"> </div>
									<div class="clear"></div>
								</div>
							</div>
						</a>
					</div>
					{% endfor %}

					<div class="clear"></div>
				</div>
				<!-- ##333 -->
			</div>
			<div class="rsidebar span_1_of_left">
				<div class="top-border"> </div>
				<div class="border">
					<link href="{{ asset('assetsAPI/css/default.css') }}" rel="stylesheet" type="text/css"
						media="all" />
					<link href="{{ asset('assetsAPI/css/nivo-slider.css') }}" rel="stylesheet" type="text/css"
						media="all" />
					<script src="{{ asset('assetsAPI/js/jquery.nivo.slider.js') }}"></script>
					<script type="text/javascript">
						$(window).load(function () {
							$('#slider').nivoSlider();
						});
					</script>
					<div class="slider-wrapper theme-default">
						<div id="slider" class="nivoSlider">
							<img src="{{ asset('assetsAPI/images/t-img1.jpg') }}" alt="" />
							<img src="{{ asset('assetsAPI/images/t-img2.jpg') }}" alt="" />
							<img src="{{ asset('assetsAPI/images/t-img3.jpg') }}" alt="" />
						</div>
					</div>
					<div class="btn"><a href="single.html">Check it Out</a></div>
				</div>
				<div class="top-border"> </div>
				<div class="sidebar-bottom">
					<h2 class="m_1">Newsletters<br> Signup</h2>
					<p class="m_text">Lorem ipsum dolor sit amet, consectetuer</p>
					<div class="subscribe">
						<!-- form -->
						<form method="POST" action="{{ path('test_mail') }}">
							<input name="email" type="text" class="textbox">
							{# gg reCaptcha block #}
							<br>
							<div class="clear-fix"></div>
							<br>
							<span id="g_recaptcha"></span>
							<div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}">gg-reCaptcha</div>

							<input type="submit" value="Subscribe">
						</form>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</div>
{% endblock %}