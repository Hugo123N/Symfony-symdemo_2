{% extends "cms/base.html.twig" %}

{% block title %}Create Categories{% endblock %}

{% block main_content %}
<section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">list Categories</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>name</th>
                  <th>note</th>
                  <th>new/old</th>
                  <th>show/hiden</th>
                  <th>created</th>
                  <th>updated</th>
                  <th>edit</th>
                  <th>remove</th>
                </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                  <tr>
                    <td>{{ category.name }}</td>
                    <td>{{ category.slug }}</td>
                    <td>
                      {% if category.priority == 1 %}
                        new
                      {% else %}
                        old
                      {% endif %}
                    </td>
                    <td>
                        {% if category.status == 1 %}
                          show
                        {% else %}
                          hiden
                        {% endif %}
                    </td>
                    <td>
                        {{ category.createdAt|date("m/d/Y") }}
                    </td>
                    <td>
                        {{ category.updatedAt|date("m/d/Y") }}
                    </td>
                    
                    <td>
                      <a href="{{ path('showEditCategories', { id: category.id }) }}">Edit</a>
                    </td>

                    <td>
                      <a href="{{ path('removeCategories', { id: category.id }) }}">Remove</a>
                    </td>

                </tr>
                
                {% endfor %}
                
                </tbody>
                
                <tfoot>
                <tr>
                  <th>name</th>
                  <th>note</th>
                  <th>new/old</th>
                  <th>show/hiden</th>
                  <th>created</th>
                  <th>updated</th>
                  <th>edit</th>
                  <th>remove</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
          </div>
        </div>
    </section>
{% endblock %}